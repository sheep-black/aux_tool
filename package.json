{
  "name": "auxtool",
  "version": "1.0.0",
  "private": true,
  "main": "dist-electron/main.js",
  "description": "Data Driven Auxiliary Tools ",
  "author": {
    "institution": "CS of Njust",
    "name": "Prof Xiao"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "serve-json": "json-server.cmd --watch data.json"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "@antv/x6": "^1.31.0",
    "file-saver": "^2.0.5",
    "fs": "^0.0.1-security",
    "json-server": "^0.17.3",
    "qs": "^6.11.2",
    "require": "^2.4.20",
    "view-ui-plus": "^1.3.14",
    "vite-plugin-proxy": "^0.5.0",
    "less": "^4.1.3",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@types/node": "^20.4.6",
    "@types/nprogress": "^0.2.0",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "typescript": "4.8.4",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "vite": "^4.4.6",
    "vite-plugin-electron": "^0.12.0"
  },
  "build": {
    "appId": "com.njust.casic",
    "productName": "数据驱动辅助工具",
    "copyright": "Copyright © 2023 njust",
    "icon": "./public/favicon.ico",
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "数据驱动辅助工具",
      
      "deleteAppDataOnUninstall": true,
      "artifactName": "数据驱动辅助工具${version}.${ext}",
      "createDesktopShortcut": true
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraFiles": [
      "./data"
    ],
    "directories": {
      "output": "output/"
    }
  }
}
